{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "schema for Sync pings, documentation avaliable in toolkit/components/telemetry/docs/sync-ping.rst",
  "type": "object",
  "properties": {
    "version": { "type": "integer", "minimum": 0 },
    "os": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "version": { "type": "string" },
        "locale": { "type": "string" },
        "distro": {
          "type": [
            "string",
            "null"
          ]
        },
        "distroVersion": {
          "type": [
            "string",
            "null"
          ]
        },
        "libstdcxxVersion": {
          "type": [
            "string",
            "null"
          ]
        },
        "kernelVersion": {
          "type": "string"
        },
        "servicePackMajor": {
          "type": "number"
        },
        "servicePackMinor": {
          "type": "number"
        },
        "windowsBuildNumber": {
          "type": "number"
        },
        "windowsUBR": {
          "type": [ "number", "null" ]
        },
        "installYear": {
          "type": [ "number", "null" ]
        },
        "locale": {
          "type": "string"
        },
        "hasPrefetch": {
          "type": "boolean"
        },
        "hasSuperfetch": {
          "type": "boolean"
        }
      }
    },
    "devices": {
      "type": "array",
      "items": {
        "additionalProperties": false,
        "type": "object",
        "properties": {
          "id": { "type": "string", "pattern": "^([0-9a-f]{64}|0{32})$" },
          "os": { "type": ["string", "null"] },
          "version": { "type": ["string", "null"] },
          "type": { "type": "string" },
          "syncID": { "type": "string" }
        }
      }
    },
    "discarded": { "type": "integer", "minimum": 1 },
    "why": { "type": "string" },
    "uid": {
      "type": ["string", "null"],
      "pattern": "^[0-9a-f]{32}$"
    },
    "deviceID": {
      "type": ["string", "null"],
      "pattern": "^[0-9a-f]{64}$"
    },
    "sessionStartDate": { "type": "string" },
    "syncs": {
      "type": "array",
      "minItems": 0,
      "items": @TELEMETRY_SYNCITEM_1_JSON@
    },
    "syncNodeType": {
      "type": ["string", "null"]
    },
    "migrations": {
      "type": "array",
      "items": @TELEMETRY_SYNCMIGRATION_1_JSON@
    },
    "events": {
      "type": "array",
      "items": @COMMON_EVENT_1_JSON@
    },
    "histograms": {
      "type": "object",
      "additionalProperties": {
        "anyOf": [
          {
            "$comment": "Desktop-style histograms",
            @TELEMETRY_HISTOGRAM_1_JSON@
          },
          {
            "$comment": "Nondesktop-style histograms",
            "type": "object",
            "properties": {
              "min": { "type": "integer" },
              "max": { "type": "integer" },
              "histogram_type": { "type": "integer" },
              "sum": { "type": "integer" },
              "ranges": { "type": "array", "items": { "type": "integer" } },
              "counts": { "type": "array", "items": { "type": "integer" } }
            },
            "additionalProperties": false
          }
        ]
      }
    }
  }
}
